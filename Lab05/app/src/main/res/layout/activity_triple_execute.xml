<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.TripleExecuteActivity">
    <Button
            android:text="Run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFirst"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/design_default_color_primary"
            android:textColor="@color/background"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/progressBarFirst"
            app:layout_constraintStart_toEndOf="@+id/buttonFirst" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/buttonFirst"
            app:layout_constraintBottom_toBottomOf="@+id/buttonFirst" app:layout_constraintVertical_bias="0.529"/>
    <Button
            android:text="Run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSecond"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/design_default_color_primary"
            android:textColor="@color/background"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonFirst"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/progressBarSecond"
            app:layout_constraintStart_toEndOf="@+id/buttonSecond" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/buttonSecond"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSecond"/>
    <Button
            android:text="Run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonThird"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/design_default_color_primary"
            android:textColor="@color/background"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/buttonSecond"
    />
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/progressBarThird"
            app:layout_constraintStart_toEndOf="@+id/buttonThird" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/buttonThird"
            app:layout_constraintBottom_toBottomOf="@+id/buttonThird" app:layout_constraintVertical_bias="0.466"/>
    <Button
            android:text="Reset"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReset" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonThird" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>